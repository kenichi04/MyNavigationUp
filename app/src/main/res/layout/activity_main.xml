<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:andriod="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    andriod:id="@+id/activity_main"
    andriod:layout_width="match_parent"
    andriod:layout_height="match_parent"
    andriod:paddingBottom="@dimen/activity_vertical_margin"
    andriod:paddingLeft="@dimen/activity_horizontal_margin"
    andriod:paddingRight="@dimen/activity_horizontal_margin"
    andriod:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        andriod:id="@+id/main_text"
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:text="Main Activity" />

    <Button
        andriod:layout_below="@+id/main_text"
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:text="Move Child"
        andriod:onClick="moveChild" />

</RelativeLayout>
